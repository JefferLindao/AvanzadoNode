{
  "name": "platziverse-web",
  "version": "1.0.0",
  "description": "A Simple IoT Plataform - Web Dashboard",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "prestart": "npm run build",
    "build": "NODE_ENV=producction browserify -g envify -t babelify -t vueify client/app.js | uglifyjs -c -m -o public/bundle.js",
    "start-dev": "DEBUG=platziverse:* nodemon server.js",
    "prestart-dev": "npm run build-dev",
    "build-dev": "browserify -g envify -t babelify -t vueify client/app.js -o public/bundle.js",
    "lint": "standard"
  },
  "author": "JefferLindao",
  "license": "MIT",
  "devDependencies": {
    "@types/request-promise-native": "^1.0.17",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "standard": "^16.0.3",
    "vueify": "^9.4.1"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "chart.js": "^2.6.0",
    "debug": "^4.3.1",
    "envify": "^4.1.0",
    "express": "^4.17.1",
    "moment": "^2.29.1",
    "platziverse-agent": "file:../platziverse-agent",
    "random-material-color": "^1.0.5",
    "request": "^2.81.0",
    "request-promise-native": "^1.0.4",
    "socket.io": "^4.1.0",
    "socket.io-client": "^4.1.1",
    "vue": "^2.4.2",
    "vue-chartjs": "^2.8.1"
  }
}
